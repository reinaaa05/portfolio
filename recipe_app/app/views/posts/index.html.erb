<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Posts image</th>
      <th>Content</th>
      <th>Point</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= post.name %></td>
        <td><%= image_tag post.posts_image.to_s %></td>

        <td><%= post.content %></td>
        <td><%= post.point %></td>
        <td><%= link_to 'Show', post %></td>
        <% if user_signed_in? && post.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: '削除しますか?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<td><%= @material.name %></td>

<br>

