<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :画像 %>
    <%= form.file_field :posts_image %>
  </div>
  
  <div class="materials">
    <%= form.fields_for :materials do |f| %>
      <%= f.label "タグ" %>
      <%= render "material_fields", f: f %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "タグを追加", form, :materials %>
    </div>
  </div>

  <div class="field">
    <%= form.label :紹介文 %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :コツ・ポイント %>
    <%= form.text_area :point %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
