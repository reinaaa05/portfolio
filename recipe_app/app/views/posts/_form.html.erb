  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="post-top">
      <div class="post-left">
        <div class="new-name">
          <%= form.label :タイトル %><br>
          <%= form.text_field :name %>
        </div>
        <div class="new-image">
          <%= form.label :料理画像 %>
          <%= form.file_field :posts_image, id: :posts_image %>
          <%= image_tag @post.posts_image.to_s, id: :post_img_prev, :size => '250x250'%>
        </div>
      </div>
      <script type="text/javascript">
        $(function() {
        function readURL(input) {
          if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
              $('#post_img_prev').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
          }
        }
        $("#posts_image").change(function(){
          readURL(this);
        });
        });
        </script>

      <div class="post-right">
        <div class="new-content">
          <%= form.label :紹介文 %><br>
          <%= form.text_area :content %>
        </div>
      </div>
    </div>

    <div class="show-foods">
      <%= form.fields_for :foods do |f| %>
        <%= f.label "材料・分量" %><br>
        <%= render "food_fields", f: f %>
      <% end %>
      <div class="links">
        <%= link_to_add_association "追加", form, :foods,class:"btn btn-outline-dark" %>
      </div>
    </div>

    <div class="show-recipes">
    <%= form.fields_for :recipes do |f| %>
      <%= f.label "作り方" %>
      <%= render "recipe_fields", f: f %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "追加", form, :recipes ,class:"btn btn-outline-dark"%>
    </div>
  </div>

    <div class="show-point">
      <%= form.label :コツ・ポイント %>
      <%= form.text_area :point %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
