<div class="container">
  <div class="mainwrapper">
    <div class="aside">
      <ul class="list-group">
        <li class="list-group-item"><a href="/posts/">ホーム</a></li>
        <li class="list-group-item"><a href="/users/<%= current_user.id %>">マイページ</a></li>
        <li class="list-group-item"><a href="/users/<%= current_user.id %>/likes">いいね</a></li>
        <li class="list-group-item"><%= link_to("ランキング",ranking_posts_path) %></li>
        <li class="list-group-item"><%= link_to("検索",search_posts_path) %></li>
        <li class="list-group-item"><a href="/users">ユーザー一覧</a></li>
        <li class="list-group-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
    <div class="main-area">
      <div class="post-show">
        <div class="post-top">
          <div class="show-left">
            <div class="show-post_name">
              <h2><%= @post.name %><h2>
            </div>
            <div class="show-posts_image">
              <%= image_tag @post.posts_image.to_s, :size => '300x300',class:'posts_image-show' %>
            </div>
          </div>
          <div class="show-right">
            <div class="show-likes_icon">
              <% if Like.find_by(user_id:current_user.id,post_id:@post.id) %>
                <%= link_to("/likes/#{@post.id}/destroy",{method: "post"}) do %>
                <span>お気に入りに登録<i class="fa fa-heart unlike-btn"></i></span>
                <% end %> 
              <% else %>
                <%= link_to("/likes/#{@post.id}/create",{method: "post"}) do %>
                <span>お気に入りに登録<i class="far fa-heart like-btn"></i></span>
                <% end %> 
              <% end %>
            </div>
            <div class="show-post_content">
              <%= simple_format(@post.content) %>
            </div>
            <div class="show-user_name">
              <%= image_tag @post.user.user_image.to_s, class:"user_image" %>
              <span><%= @post.user.name %></span>
            </div>
            <div class="show-link">
              <div class="show-comment">
                コメント<%= @comment_count %>件
              </div>
              <div class="show-likes">
                いいね<%= @likes_count %>人
              </div>
            </div>
            <div class="show-post_id">
              <span>レシピID: <%= @post.id %></span>
            </div>
          </div>
        </div>
        <div class="show-foods">
          <table class="table table-striped">
            <tr><th>材料</th><th>分量</th></tr>
            <tr>
            <% @post.foods.each do |food| %>
              <td><%= food.m_name %></td>
              <td><%= food.m_amount %></td>
            </tr>
            <% end %>
          </table>
        </div>
        <div class="show-recipes">
          <h4>作り方</h4>
          <% num = 0 %>
          <div class="show-process grid-show">
            <% @post.recipes.each do |recipe| %>
              <div class="process-image">
                <% num += 1 %>
                <p><%= num %></p>
                <%= image_tag recipe.process_image.to_s, :size => '200x200' %>
                <p><%= recipe.process %></p>
              </div>
            <% end %>
          </div>
        </div>
        <div class="show-point">
          <h4>コツ・ポイント</h4>
          <span><%= @post.point %></span>
        </div>
        <div class="comment">
          <h4>コメント</h4>
          <span class="plus">+</span>
          <div class="answer">
            <div class="comment-grid">
              <% @comments.each do |c| %>
                <div class="comment-main">
                  <div class="comment-name">
                    <a href="/users/<% @post.user.id %>"> <%= image_tag c.user.user_image.to_s, class:"user_image-comment" %>
                    <span><%= c.user.name %></span></a>
                  </div>
                  <div class="comment-content">
                    <%= image_tag c.cook_image.to_s %>
                    <p><%= c.content %></P>
                  </div>
                  <% if user_signed_in? && c.user_id == current_user.id %>
                    <%=link_to "削除", post_comment_path(@post, c), method: :delete %>
                  <% end %>   
                </div>
              <% end %>
            </div>
            <div class="comment-new">
              <%= form_for [@post, @comment] do |form| %>
                <div class="field">
                  <%= form.label :画像 %><br />
                  <%= form.file_field :cook_image, id: :cook_image %>
                  <%= image_tag @comment.cook_image.to_s, id: :cook_img_prev , :size => '150x150'%>
                  <script type="text/javascript">
                    $(function() {
                    function readURL(input) {
                      if (input.files && input.files[0]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                          $('#cook_img_prev').attr('src', e.target.result);
                        }
                        reader.readAsDataURL(input.files[0]);
                      }
                    }
                    $("#cook_image").change(function(){
                      readURL(this);
                    });
                    });
                    </script>
                </div>
                <div class="field">
                  <%= form.label :コメント %><br />
                  <%= form.text_field :content %>
                  <%= form.submit "コメントする" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <% if user_signed_in? && @post.user_id == current_user.id %>
          <%= link_to 'Edit', edit_post_path(@post) , class: "btn btn-default"%> 
          <%=link_to "Delete", @post, method: :delete, data: { confirm: "削除しますか?" }, class: "btn btn-default" %>
        <% end %>
        <%= link_to 'Back', posts_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>