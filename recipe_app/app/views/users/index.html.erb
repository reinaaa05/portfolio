<div class="container">
  <div class="mainwrapper">
    <div class="aside">
      <%= render 'posts/aside' %>
    </div>
    <div class="main-area">
      <div class="user-index">
        <p>ユーザー一覧</p>
        <ul class="user-list">
          <% @users.each do |user| %>
            <li><a href="/users/<%= user.id %>"><%= image_tag user.user_image.to_s, class:"user_image" %><%= user.name %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
