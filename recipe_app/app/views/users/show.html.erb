<div class="container">
  <div class="mainwrapper">
    <div class="aside">
      <ul class="list-group">
        <li class="list-group-item"><a href="/posts/">ホーム</a></li>
        <li class="list-group-item"><a href="/users/<%= current_user.id %>">マイページ</a></li>
        <li class="list-group-item"><a href="/users/<%= current_user.id %>/likes">いいね</a></li>
        <li class="list-group-item"><%= link_to("ランキング",ranking_posts_path) %></li>
        <li class="list-group-item"><%= link_to("検索",search_posts_path) %></li>
        <li class="list-group-item"><a href="/users">ユーザー一覧</a></li>
        <li class="list-group-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { confirm: "ログアウトしますか?"} %></li>
      </ul>
    </div>
    <div class="main-area">
      <div class="user-wrapper">
        <div class="icon_image">
          <%= image_tag @user.icon_image.to_s, class:"icon_image" %> 
        </div>
        <div class="user-show-top">
          <div class="user-show-left">
            <%= image_tag @user.user_image.to_s, class:"show-user_image" %>
            <span class="fa fa-plus-circle setting"></span>
          </div>
          <div class="user-show-mid">
            <%= @user.name %>
          </div>
          <div class="user-show-right">
            <%= link_to("レシピを投稿する", new_post_path) %>
          </div>
        </div>
        <div class="user-show-content">
          <%= @user.content %>
        </div>
        <div class="user-show-post grid">
          <% @post.each do |post| %>
            <div class="item">
              <a href="/posts/<%= post.id %>"><%= image_tag post.posts_image.to_s, :size => '200x200',class:'show-user' %>
              <p><%= post.name %></p></a>
            </div>
          <% end %>
        </div>
        <!-- アイコンイメージモーダル-->
        <div class="setting-modal-wrapper" id="icon_image-setting-modal">
          <div class="modal-main">
            <div class="close-modal">
              <i class="fa fa-2x fa-times"></i>
            </div>
            <div id="icon_image-setting-form">
              <%= form_for(resources, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resources: resources %>
              <div class="field-image">
                <%= f.label :トップ画像 %><br/>
                <%= f.file_field :icon_image, id: :icon_image %>
                <%= image_tag @user.icon_image.to_s, id: :icon_img_prev, :size => '200x100'%>
                <script type="text/javascript">
                $(function() {
                  function readURL(input) {
                    if (input.files && input.files[0]) {
                      var reader = new FileReader();
                      reader.onload = function (e) {
                        $('#icon_img_prev').attr('src', e.target.result);
                      }
                      reader.readAsDataURL(input.files[0]);
                    }
                  }
                  $("#icon_image").change(function(){
                    readURL(this);
                  });
                  });
                  </script>
              </div>
              <div class="field-password">
                <%= f.label :password %> <br>
                <%= f.password_field :current_password, autocomplete: "current-password" %>
              </div>
              <div class="actions">
                <%= f.submit "Update" %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
        <!-- セッティングモーダル -->
        <div class="setting-modal-wrapper" id="setting-modal">
          <div class="modal-main">
            <div class="close-modal">
              <i class="fa fa-2x fa-times"></i>
            </div>
            <div id="setting-form">
              <h2>プロフィールを編集</h2>

              <%= form_for(resources, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resources: resources %>
              
                <div class="field">
                  <%= f.label :name %><br />
                  <%= f.text_field :name %>
                </div>
              
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
              
                <% if devise_mapping.confirmable? && resources.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resources.unconfirmed_email %></div>
                <% end %>
              
                <div class="field-image">
                  <%= f.label :image %><br/>
                  <%= f.file_field :user_image %>
                </div>
              
                <div class="field">
                  <%= f.label :content %><br />
                  <%= f.text_area :content %>
                </div>
              
                <div class="field">
                  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>
              
                <div class="field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
              
                <div class="field">
                  <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                  <%= f.password_field :current_password, autocomplete: "current-password" %>
                </div>
              
                <div class="actions">
                  <%= f.submit "Update" %>
                </div>
              <% end %>
              
              <h3>Cancel my account</h3>
              
              <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
              
              <%= link_to "Back", :back %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>