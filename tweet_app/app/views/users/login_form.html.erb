<div class="main users-new">
  <div class="form-container">
    <div class="user-login-title">
      <span class="fa fa-twitter fa-4x"></span>
      <h1>Twitterにログイン</h1>
    </div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <div class="form-signup">
            <span>電話、メールまたはユーザー名</span>
            <input name="email" value="<%= @email %>">
            <span>パスワード</span>
            <input type="password" name="password" value="<%= @password %>">
          </div>
          <div class="form-btn">
            <input type="submit" value="ログイン">
            </div>
          <div class="form-link">
            <%= link_to("パスワードをお忘れですか？
            ", "/") %>
            <%= link_to("アカウント作成","/signup") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>