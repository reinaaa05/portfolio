<%= form_for(work, html: {class: 'form-horizontal', role: 'form', multipart: true}) do |form| %>
  <% if work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= form.label :date, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.date_select :date %>
    </div>
  </div>

  <div class='form-group'>
    <%= form.label :category_id, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
    <%= form.select :category_id, Category.all.map{|o| [o.name, o.id]} %>
    </div>
  </div>

  <div class='form-group'>
    <%= form.label :count, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= form.number_field :count %>
    </div>
  </div>

  <div class="actions">
    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10'>
        <%= form.submit 'Submit', class: 'btn btn-success' %>
        <%= link_to 'Back', :back, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
