<p id="notice"><%= notice %></p>

<h1>Works</h1>

<%= form_tag('/works', method: 'get') do %>
  <%= label_tag(:date, '日付') %>
  <%= text_field_tag(:date) %>
  <%= label_tag(:category_id, '仕事内容') %>
  <%= text_field_tag(:category_id) %>
  <%= submit_tag('Search') %> <%= link_to 'Clear', works_path %>
<% end %>  
  <br>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Count</th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= link_to work.date, work, class: 'widelink' %></td>
        <td><%= link_to work.category_id, work, class: 'widelink' %></td>
        <td><%= link_to work.count, work, class: 'widelink' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="sum">
  <p>合計:<%= Work.all.sum(:count) %></p>
</div>



<br>
<div class="btn">
  <%= link_to 'New Work', new_work_path , class: 'btn btn-primary'%>
  <%= link_to 'Content', categories_path, class:"btn btn-info" %>
</div>