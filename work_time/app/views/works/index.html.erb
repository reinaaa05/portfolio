<p id="notice"><%= notice %></p>

<h1>Works</h1>
<%= form_tag('/works', method: 'get') do %>
  <%= label_tag(:name_key, 'Search name:') %>
  <%= text_field_tag(:name_key) %>
  <%= label_tag(:date_key, 'Search date:') %>
  <%= text_field_tag(:date_key) %>
  <%= label_tag(:category_key, 'Search category:') %>
  <select name="category_key">
    <option value="10">出品</option>
    <option value="12">価格メンテナンス</option>
    <option value="13">在庫メンテナンス</option>
    <option value="14">発送</option>
  </select>
  <%= submit_tag('Search') %> <%= link_to 'Clear', works_path %>
  <% end %>
  
  <br>


<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Count</th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.user.name %></td>
        <td><%= link_to work.date, work, class: 'widelink' %></td>
        <td><%= link_to work.category.name, work, class: 'widelink' %></td>
        <td><%= link_to work.count, work, class: 'widelink' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="sum">
  <p>合計:<%= @works.sum(:count) %></p>
</div>



<br>
<div class="btn">
  <%= link_to 'New Work', new_work_path , class: 'btn btn-primary'%>
  <%= link_to 'Content', categories_path, class:"btn btn-info" %>
</div>