<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
   
      <tr>
        <td><%= link_to comment.body, comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path,class: "btn btn-primary"%>
