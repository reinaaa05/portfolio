<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @shop.category.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @shop.name %>
</p>

<img src="<%= "/shops_images/#{@shop.image_name}" %>">

<p>
  <strong>Address:</strong>
  <%= @shop.address %>
</p>

<%= link_to "コメント一覧", comments_path %>

<%= content_tag(:iframe, 'map', src:'https://www.google.com/maps/embed/v1/place?key=AIzaSyDUaNlTExnfdJhpvdonRreyH1wYgmYW6UE&q=' + @shop.address, width: "100%", height: 320, frameborder: 0) %>

<br>
<%=link_to "Delete", @shop, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
<%= link_to 'Edit', edit_shop_path(@shop), class: "btn btn-primary" %> 
<%= link_to 'Back', shops_path, class: "btn btn-default" %>
