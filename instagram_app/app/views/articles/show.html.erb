<div class="article_show">
  <div class="container">
    <div class="show-main">
      <p id="notice"><%= notice %></p>

      <div class="name">
        <img src=<%= @article.user.image %> class = "icon_image2">
        <%= @article.user.name %>
      </div>

      <div class="picture arrows">
        <div class="slide"><%= image_tag @article.image.to_s , :size => '300x400'%></div>
        <div class="slide"><%= image_tag @article.image2.to_s, :size => '300x400' %></div>
        <div class="slide"><%= image_tag @article.image3.to_s, :size => '300x400' %></div>
        <div class="slide"><%= image_tag @article.image4.to_s, :size => '300x400' %></div>
        <div class="slide"><%= image_tag @article.image5.to_s, :size => '300x400' %></div>
      </div>
      <div class="likes-btn">
        <% if Like.find_by(user_id: current_user.id, article_id: @article.id) %>
        <%= link_to("/likes/#{@article.id}/destroy", {method: "post"}) do %>
          <span class="fa fa-heart like-btn-unlike"></span>
          <% end %>
        <% else %>
          <%= link_to("/likes/#{@article.id}/create", {method: "post"}) do %>
          <span class="fa fa-heart like-btn"></span>
          <% end %>
        <% end %>
        <%= @likes_count %>
      </div>
      <div class="article_body">
        <%= @article.body %>
      </div>
      <h1>投稿詳細ページ</h1>
      <h3><%= @article.user.email %></h3>
      <h3><%= @article.content %></h3>

      <h2>コメント一覧</h2>
      <% @comments.each do |c| %>
        <div>
          <a href="/users/<%= @article.user.id %>"><%= c.user.email %></a>
          <%= c.content %>
          <hr>
        </div>
      <% end %>
      
      <%= form_with(model:[@article, @comment], method: :post) do |f|%>
        <%= f.text_field :content %>
        <br>
        <%= f.submit 'コメントする' %>
      <% end %>
      <div class="link">
        <% if user_signed_in? && @article.user_id == current_user.id %>
            <%= link_to 'Edit', edit_article_path(@article) %> <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } %> 
        <% end %>
        <%= link_to 'Back', articles_path %>
      </div>
    </div>
  </div>
</div>